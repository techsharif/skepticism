    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.8.0"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "author": "techsharif <sharif.cse.hstu@gmail.com>",
  "dependencies": {
    "chroma-js": "^2.4.2",
    "prop-types": "^15.8.1",
